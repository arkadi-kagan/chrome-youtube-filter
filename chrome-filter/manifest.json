{
  "manifest_version": 3,
  "name": "Chrome Youtube Filter",
  "version": "1.0",
  "description": "Filter Youtube content",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "js": [
      	"scripts/content.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ]
    }
  ]
}

